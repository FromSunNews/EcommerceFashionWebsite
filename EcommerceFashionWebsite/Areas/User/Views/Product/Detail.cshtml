                        <a href="#" class="heart-icon"><i class="icon_heart_alt"></i></a>
                    </div>
                    <div class="pd-rating">
                        @for (var i = 0; i < 5; i++)
                        {
                            if (i < 0)
                            {
                                <i class="fa fa-star"></i>
                            }
                            else
                            {
