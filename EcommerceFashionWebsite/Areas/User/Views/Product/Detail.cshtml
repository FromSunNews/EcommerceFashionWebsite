<script>
    var maxLength = 70; // Số ký tự tối đa bạn muốn hiển thị
    var productDescriptions = document.querySelectorAll("#productDescription");

    productDescriptions.forEach(function (productDescription) {
        if (productDescription.innerText.length > maxLength) {
            productDescription.innerText = productDescription.innerText.substring(0, maxLength) + "...";
        }
    });
</script>
