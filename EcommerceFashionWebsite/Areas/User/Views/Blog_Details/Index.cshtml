@{
    ViewData["Title"] = @_lang.Getkey("blog_details");
}
<section class="blog-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="blog-details-inner">
                    <div class="blog-detail-title">
                        <h2>@_lang.Getkey("the_personality")</h2>
                        <p>@_lang.Getkey("travel") <span>- @_lang.Getkey("may") 19, 2019</span></p>
                    </div>
                    <div class="blog-large-pic">
                        <img src="img/blog/blog-detail.jpg" alt="">
                    </div>
                    <div class="blog-detail-desc">
                        <p>
                            @_lang.Getkey("page_details")
                        </p>
                    </div>
                    <div class="blog-quote">
                        <p>
                            @_lang.Getkey("page_details1") <span>- Steven Jobs</span>
                        </p>
                    </div>
                    <div class="blog-more">
                        <div class="row">
                            <div class="col-sm-4">
                                <img src="img/blog/blog-detail-1.jpg" alt="">
                            </div>
                            <div class="col-sm-4">
                                <img src="img/blog/blog-detail-2.jpg" alt="">
                            </div>
                            <div class="col-sm-4">
                                <img src="img/blog/blog-detail-3.jpg" alt="">
                            </div>
                        </div>
                    </div>
                    <p>
                        @_lang.Getkey("page_details")
                    </p>
                    <div class="tag-share">
                        <div class="details-tag">
                            <ul>
                                <li><i class="fa fa-tags"></i></li>
                                <li>@_lang.Getkey("travel")</li>
                                <li>@_lang.Getkey("beauty")</li>
                                <li>@_lang.Getkey("fashion")</li>
                            </ul>
                        </div>
                        <div class="blog-share">
                            <span>@_lang.Getkey("share"):</span>
                            <div class="social-links">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-google-plus"></i></a>
                                <a href="#"><i class="fa fa-instagram"></i></a>
                                <a href="#"><i class="fa fa-youtube-play"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="blog-post">
                        <div class="row">
                            <div class="col-lg-5 col-md-6">
                                <a href="#" class="prev-blog">
                                    <div class="pb-pic">
                                        <i class="ti-arrow-left"></i>
                                        <img src="img/blog/prev-blog.png" alt="">
                                    </div>
                                    <div class="pb-text">
                                        <span>@_lang.Getkey("previous_post"):</span>
                                        <h5>@_lang.Getkey("the_personality");</h5>
                                    </div>
                                </a>
                            </div>
                            <div class="col-lg-5 offset-lg-2 col-md-6">
                                <a href="#" class="next-blog">
                                    <div class="nb-pic">
                                        <img src="img/blog/next-blog.png" alt="">
                                        <i class="ti-arrow-right"></i>
                                    </div>
                                    <div class="nb-text">
                                        <span>@_lang.Getkey("next_post"):</span>
                                        <h5>@_lang.Getkey("the_personality")</h5>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="posted-by">
                        <div class="pb-pic">
                            <img src="img/blog/post-by.png" alt="">
                        </div>
                        <div class="pb-text">
                            <a href="#">
                                <h5>Shane Lynch</h5>
                            </a>
                            <p>
                                @_lang.Getkey("page_details1");
                            </p>
                        </div>
                    </div>
                    <div class="leave-comment">
                        <h4>@_lang.Getkey("leave_a_comment")</h4>
                        <form action="#" class="comment-form">
                            <div class="row">
                                <div class="col-lg-6">
                                    <input type="text" placeholder="@_lang.Getkey("name")">
                                </div>
                                <div class="col-lg-6">
                                    <input type="text" placeholder="Email">
                                </div>
                                <div class="col-lg-12">
                                    <textarea placeholder="@_lang.Getkey("message")"></textarea>
                                    <button type="submit" class="site-btn">@_lang.Getkey("send_message")</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>