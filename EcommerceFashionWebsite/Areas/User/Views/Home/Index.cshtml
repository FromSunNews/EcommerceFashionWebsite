@{
    ViewData["Title"] = @_lang.Getkey("home");
}
<html lang="en">
<!-- Hero Section Begin -->
<section class="hero-section">

    <div class="hero-items owl-carousel">
        <div class="single-hero-items set-bg rounded" data-setbg="@Url.Content("~/user/img/hero-1.jpg")">
            <div class="container">
                <div class="row">
                    <div class="col-lg-5">
                        <h1>@_lang.Getkey("black_friday")</h1>
                        <p href="#">@_lang.Getkey("title_sale")</p>
                        <a asp-controller="Shop" asp-area="User" class="primary-btn rounded">@_lang.Getkey("shop_now")</a>
                    </div>
                </div>
                <div class="off-card">
                    <h2>@_lang.Getkey("sale50") </h2>
                </div>
            </div>
        </div>
        <div class="single-hero-items set-bg rounded" data-setbg="@Url.Content("~/user/img/hero-2.jpg")">
            <div class="container">
                <div class="row">
                    <div class="col-lg-5">

                        <h1>@_lang.Getkey("black_friday")</h1>
                        <p>
                            @_lang.Getkey("title_sale")
                        </p>
                        <a asp-controller="Shop" asp-area="User"  class="primary-btn rounded">@_lang.Getkey("shop_now")</a>
                    </div>
                </div>
                <div class="off-card">
                    <h2>@_lang.Getkey("sale50")</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->
<!-- Banner Section Begin -->
<div class="banner-section spad">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3">
                <a asp-controller="Shop" asp-area="User" asp-route-Type="@ProductType.MALE" class="single-banner rounded">
                    <img class="rounded" src="~/user/img/banner-1.jpg" alt="">
                    <div class="inner-text">
                        <h4>@_lang.Getkey("men")</h4>
                    </div>
                </a>
            </div>
            <div class="col-lg-3">
                <a  asp-controller="Shop" asp-area="User" asp-route-Type="@ProductType.FEMALE" class="single-banner rounded">
                    <img class="rounded" src="~/user/img/banner-2.jpg" alt="">
                    <div class="inner-text">
                        <h4>@_lang.Getkey("women")</h4>
                    </div>
                </a>
            </div>
            <div class="col-lg-3">
                <a asp-controller="Shop" asp-area="User" asp-route-Type="@ProductType.UNISEX" class="single-banner rounded">
                    <img class="rounded" src="~/user/img/banner-4.jpg" alt="">
                    <div class="inner-text">
                        <h4>Unisex</h4>
                    </div>
                </a>
            </div>
            <div class="col-lg-3">
                <a asp-controller="Shop" asp-area="User" asp-route-Type="@ProductType.KID" class="single-banner rounded">
                    <img class="rounded" src="~/user/img/banner-3.jpg" alt="">
                    <div class="inner-text">
                        <h4>@_lang.Getkey("kid")</h4>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
<!-- Banner Section End -->
<!-- Women Banner Section Begin -->
<section class="women-banner spad">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3">
                <div style="height: 500px !important;" class="product-large set-bg rounded" data-setbg="@Url.Content("~/user/img/products/women-large.jpg")">
                    <h2>@_lang.Getkey("women")</h2>
                    <a href="#">@_lang.Getkey("discover_more")</a>
                </div>
            </div>
            <div class="col-lg-8 offset-lg-1">
                <vc:female-product></vc:female-product>
            </div>
        </div>
    </div>
</section>
<!-- Women Banner Section End -->
<!-- Deal Of The Week Section Begin-->
<section class="deal-of-week set-bg spad rounded" data-setbg="@Url.Content("~/user/img/time-bg.jpg")">
    <div class="container">
        <div class="col-lg-6 text-center">
            <div class="section-title">
                <h2>@_lang.Getkey("deal_of")</h2>
                <p>
                    @_lang.Getkey("sale_bag")
                </p>
                <div class="product-price">
                    $35.00
                    <span>/ @_lang.Getkey("backpack")</span>
                </div>
            </div>
            <div class="countdown-timer" id="countdown">
                <div class="cd-item rounded">
                    <span>56</span>
                    <p>@_lang.Getkey("days")</p>
                </div>
                <div class="cd-item rounded">
                    <span>12</span>
                    <p>@_lang.Getkey("hours")</p>
                </div>
                <div class="cd-item rounded">
                    <span>40</span>
                    <p>@_lang.Getkey("mins")</p>
                </div>
                <div class="cd-item rounded">
                    <span>52</span>
                    <p>@_lang.Getkey("second")</p>
                </div>
            </div>
            <a href="#" class="primary-btn rounded">@_lang.Getkey("shop_now")</a>
        </div>
    </div>
</section>
<!-- Deal Of The Week Section End -->
<!-- Man Banner Section Begin -->
<section class="man-banner spad">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <vc:male-product></vc:male-product>
            </div>
            <div class="col-lg-3 offset-lg-1">
                <div style="height: 500px !important;" class="product-large set-bg m-large rounded" data-setbg="@Url.Content("~/user/img/products/man-large.jpg")">
                    <h2>@_lang.Getkey("men")</h2>
                    <a href="#">@_lang.Getkey("discover_more")</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Man Banner Section End -->
