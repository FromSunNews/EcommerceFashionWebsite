@{
    ViewData["Title"] = "Edit Invoice";
}
@using EcommerceFashionWebsite.Areas.Admin.ViewModels;
@model InvoiceModel;

<div class="content-inner container-fluid pb-0" id="page_layout">
    <div>
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div class="header-title">
                            <h4 class="card-title">Edit Category</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="new-user-info">
                            <form method="post">
                                <div class="row">
                                    <input type="hidden" asp-for="ApplicationUserId" />
                                    <input type="hidden" asp-for="Total" />
                                    <div class="form-group col-md-6">
                                        <label asp-for="Name" class="form-label">Name:</label>
                                        <input asp-for="Name" class="form-control" aria-required="true" placeholder="Name..." />
                                        <span asp-validation-for="Name" class="text-danger mt-1"></span>
                                    </div>

                                    <div class="form-group col-md-6">
                                        <label asp-for="PhoneNumber" class="form-label">Phone Number:</label>
                                        <input asp-for="PhoneNumber" class="form-control" aria-required="true" placeholder="Phone Number..." />
                                        <span asp-validation-for="PhoneNumber" class="text-danger mt-1"></span>
                                    </div>

                                    <div class="form-group col-md-6">
                                        <label asp-for="Email" class="form-label">Email:</label>
                                        <input asp-for="Email" class="form-control" aria-required="true" placeholder="Email..." />
                                        <span asp-validation-for="Email" class="text-danger mt-1"></span>
                                    </div>

                                    <div class="group-input col-md-6">
                                        <label asp-for="OrderStatus" class="form-label">Type:</label>
                                        <select asp-for="OrderStatus" class="form-control">
                                            <option value="">Select type</option>
                                            <option value="@OrderStatusType.Processing">Processing</option>
                                            <option value="@OrderStatusType.Shipped">Shipped</option>
                                            <option value="@OrderStatusType.Delivered">Delivered</option>
                                            <option value="@OrderStatusType.Completed">Completed</option>
                                            <option value="@OrderStatusType.Canceled">Canceled</option>
                                        </select>
                                        <span asp-validation-for="OrderStatus" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Address" class="form-label">Address:</label>
                                        <textarea asp-for="Address" rows="3" class="form-control" placeholder="Address..."></textarea>
                                        <span asp-validation-for="Address" class="text-danger mt-1"></span>
                                    </div>

                                </div>
                                <button type="submit" class="btn btn-primary mt-3">Edit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

