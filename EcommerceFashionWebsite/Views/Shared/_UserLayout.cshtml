    <script>
        var timer;
        var searchInput = document.getElementById('searchInput');
        var searchResultsDiv = document.getElementById('searchResults');

        searchInput.addEventListener('input', function () {
            clearTimeout(timer);
            timer = setTimeout(function () {
                var searchQuery = searchInput.value;
                console.log("searchQuery", searchQuery);
                if (searchQuery.length >= 1) {
                    // Gửi yêu cầu tìm kiếm đến controller
                    var categoryId = $("category-select-show").data('category-id');
                    fetch('/User/Product/Search?query=' + searchQuery + '&categoryId=' + categoryId)
                        .then(response => response.json())
                        .then(data => {
                            console.log("data", data)
                            // Hiển thị kết quả tìm kiếm
                            var resultsHtml = '';
                            var maxLength = 70; // Số ký tự tối đa bạn muốn hiển thị
                            if (data && data.length > 0) {
                                data.forEach(product => {
                                    var nameLimited = product.name;
                                    if (product.name.length > maxLength) {
                                        nameLimited = product.name.substring(0, maxLength) + "...";
                                    };
                                    resultsHtml += `<div class="result-item d-flex flex-row p-2 border-bottom">
                                        <img width="75" height="75" class="rounded me-3" src="${product.urlImage}" alt="" loading="lazy" />
                <div class="d-flexjustify-content-between flex-column">
                                                                    <a href="/User/Product/Detail/${product.id}" class="h6 iq-product-detail mb-0" id="productDescription">${nameLimited}</a>
                    <div class="d-flex align-items-center" style="margin-bottom: -3px !important;">
                        <svg class="icon-24" xmlns="http://www.w3.org/2000/svg" width="24" viewBox="0 0 24 24" fill="none">
                            <path fill-rule="evenodd" clip-rule="evenodd" d="M13.1043 4.17701L14.9317 7.82776C15.1108 8.18616 15.4565 8.43467 15.8573 8.49218L19.9453 9.08062C20.9554 9.22644 21.3573 10.4505 20.6263 11.1519L17.6702 13.9924C17.3797 14.2718 17.2474 14.6733 17.3162 15.0676L18.0138 19.0778C18.1856 20.0698 17.1298 20.8267 16.227 20.3574L12.5732 18.4627C12.215 18.2768 11.786 18.2768 11.4268 18.4627L7.773 20.3574C6.87023 20.8267 5.81439 20.0698 5.98724 19.0778L6.68385 15.0676C6.75257 14.6733 6.62033 14.2718 6.32982 13.9924L3.37368 11.1519C2.64272 10.4505 3.04464 9.22644 4.05466 9.08062L8.14265 8.49218C8.54354 8.43467 8.89028 8.18616 9.06937 7.82776L10.8957 4.17701C11.3477 3.27433 12.6523 3.27433 13.1043 4.17701Z" fill="#FFD329" />
                        </svg>
                                                <p class="mb-0">${product.starRating} Rating</p>
                    </div>
                </div>
            </div>`
                                });
                                searchResultsDiv.innerHTML = resultsHtml;
                            }

                        })
                        .catch(error => {
                            console.error('Lỗi khi gửi yêu cầu tìm kiếm: ' + error);
                        });
                } else {
                    // Xóa kết quả tìm kiếm khi không có từ khóa
